{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [".env"],
      "env": ["AURA_AUTH_*"],
      "outputs": ["dist/**", "!.turbo/**", ".next/**", ".tanstack/**", ".output/**", ".react-router/**"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "//#format:root": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputLogs": "new-only",
      "persistent": false
    }
  },
  "ui": "stream",
  "cacheDir": ".turbo/cache",
  "globalDependencies": [".env", "tsconfig.json"],
  "globalEnv": [".env"]
}
