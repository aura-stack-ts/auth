{
  "name": "@aura-stack/auth-root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "An open-source authentication library for TypeScript.",
  "scripts": {
    "dev": "turbo run dev",
    "dev:core": "turbo run @aura-stack/auth#dev",
    "dev:docs": "turbo run docs#dev",
    "build": "turbo run build",
    "build:prod": "turbo run build --filter=./packages/*",
    "test": "turbo run test --parallel",
    "format": "turbo run format format:root --parallel",
    "format:root": "prettier --write . \"!packages\" \"!apps\" \"!configs\" --cache --cache-location .cache/.prettiercache",
    "format:check": "prettier --check . --cache --cache-location .cache/.prettiercache",
    "type-check": "turbo run type-check --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aura-stack-js/auth.git"
  },
  "bugs": "https://github.com/aura-stack-js/auth/issues",
  "homepage": "https://github.com/aura-stack-js/auth#readme",
  "keywords": [
    "authentication",
    "auth",
    "library",
    "javascript",
    "typescript",
    "oauth 2.0",
    "openid connect",
    "oidc"
  ],
  "author": "Aura Stack <aurastackjs@gmail.com> | Hernan Alvarado <halvaradop.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@aura-stack/prettier-config": "workspace:*",
    "@types/node": "catalog:node",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "turbo": "^2.7.5",
    "typescript": "catalog:typescript",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.15.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "configs/*",
      "apps/**",
      "docs"
    ],
    "catalogs": {
      "@tailwindcss/vite": {
        "@tailwindcss/vite": "^4.0.6"
      },
      "lucide-react": {
        "lucide-react": "^0.561.0"
      },
      "next": {
        "next": "^16.1.6"
      },
      "node": {
        "@types/node": "^24.9.2"
      },
      "react": {
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
      },
      "tailwindcss": {
        "@tailwindcss/postcss": "^4.1.16",
        "tailwindcss": "4.1.18"
      },
      "typescript": {
        "typescript": "^5.9.2"
      },
      "vite": {
        "vite": "^7.1.7"
      }
    }
  },
  "overrides": {
    "seroval": "^1.4.1",
    "lodash-es": "^4.17.23",
    "tar": ">=7.5.7",
    "zod": "^4.3.5"
  }
}
