{
  "name": "@aura-stack/auth-root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "An open-source authentication library for TypeScript.",
  "scripts": {
    "dev": "turbo run dev",
    "dev:core": "turbo run @aura-stack/auth#dev",
    "dev:docs": "turbo run docs#dev",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "format": "turbo run format format:root --parallel",
    "format:root": "prettier --write . \"!packages\" \"!apps\" \"!configs\" --cache --cache-location .cache/.prettiercache",
    "format:check": "prettier --check . --cache --cache-location .cache/.prettiercache",
    "type-check": "turbo run type-check --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aura-stack-js/auth.git"
  },
  "bugs": "https://github.com/aura-stack-js/auth/issues",
  "homepage": "https://github.com/aura-stack-js/auth#readme",
  "keywords": [
    "authentication",
    "auth",
    "library",
    "javascript",
    "typescript",
    "oauth 2.0",
    "openid connect",
    "oidc"
  ],
  "author": "Aura Stack <aurastackjs@gmail.com> | Hernan Alvarado <halvaradop.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@aura-stack/prettier-config": "workspace:*",
    "@types/node": "^24.5.1",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.15.0"
}
